{
  "name": "@mis/sushi-tailwind-react",
  "version": "1.25.0",
  "description": "sushi design for SET corporate with react, typescript and tailwindcss",
  "style": "dist/sushi.css",
  "main": "dist/cjs/index.js",
  "keywords": [
    "sushi-design",
    "component",
    "components",
    "design",
    "framework",
    "frontend",
    "react",
    "react-component",
    "ui"
  ],
  "files": [
    "dist",
    "defaultTheme.js",
    "plugin.js"
  ],
  "typings": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch ",
    "test:coverage": "jest --coverage",
    "build": "rm -rf dist && npm run build:rollup && npm run build:css:min",
    "build:rollup": "rollup -c",
    "build:webpack": "webpack --mode=development",
    "build:css": "NPM_ENV=development npx postcss src/base.css  --config postcss -o dist/sushi.css",
    "build:css:min": "NPM_ENV=production npx postcss src/base.css  --config postcss -o dist/sushi.css",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prepare": "npm run build",
    "lint": "prettier --check \"src\"",
    "format": "prettier --write \"src\"",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "prepublishOnly": "npm test && npm run lint && npm run build",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "publish:gitlab": "GITLAB_AUTH_TOKEN=sZ8F-zHeuJQkTzKsTYES npm publish"
  },
  "author": "",
  "license": "ISC",
